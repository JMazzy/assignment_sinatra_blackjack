<div class="container">
  <h1>Game</h1>
  <h1><%= @test.to_s %></h1>

  <div class="row">
    <div class="col-sm-6">
      <h3>Total Player Bankroll</h3>
      <%= %>
    </div>
    <div class="col-sm-6">
      <h3>Current Bet</h3>
      <%= %>
    </div>
  </div>

  <div class="row">
    <div class="player-hand">
      <ul>
        <%= erb :"shared/card" %>
        <%= erb :"shared/card" %>
        <%= erb :"shared/card" %>
        <%= erb :"shared/card" %>
      </ul>
    </div>
  </div>

  <div class="row">
    <div class="dealer-hand">
      <ul>
        <%= erb :"shared/card" %>
        <%= erb :"shared/card" %>
        <%= erb :"shared/card" %>
        <%= erb :"shared/card" %>
      </ul>
    </div>
  </div>

  <div class="row">
    <div class="col-sm-12">
      <form action="blackjack/hit" method="post">
        <button class="btn btn-success">Hit</button>
      </form>
      <form action="blackjack/stay" method="post">
        <button class="btn btn-primary">Stay</button>
      </form>
      <form action="blackjack/split" method="post">
        <button class="btn btn-primary">Split</button>
      </form>
      <form action="blackjack/double" method="post">
        <button class="btn btn-primary">Double</button>
      </form>
    </div>
  </div>
</div>
