<div class="row">
  <div class="col-sm-12">
    <h2>
      <% if @blackjack.winner == :draw %>
        <%= "It's a Draw." %>
      <% else %>
        <%= @blackjack.winner.to_s.capitalize + " Wins!" %>
      <% end %>
    </h2>

    <form action="blackjack/new_game" method="post">
      <button class="btn btn-primary">Play again</button>
    </form>
  </div>
</div>
